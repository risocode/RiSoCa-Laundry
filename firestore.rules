/**
 * Core Philosophy: This ruleset enforces a strict user-ownership model for user data. All user-specific data,
 * including orders, is nested under the user's own document to ensure privacy. A separate, top-level `/orders`
 * collection exists exclusively for admin access, allowing them to manage all orders without accessing user
 * private data directly.
 *
 * Data Structure:
 * - /users/{userId}: A collection storing individual UserProfile documents.
 *   - /addresses/{addressId}: Subcollection for a user's addresses.
 *   - /notifications/{notificationId}: Subcollection for a user's notifications.
 *   - /orders/{orderId}: Subcollection for a user's private order history.
 * - /orders/{orderId}: A top-level collection for all laundry orders. This is a mirror of user orders, for admin use.
 * - /services/{serviceId}: A top-level collection for public service information.
 *
 * Key Security Decisions:
 * - User Data Privacy: All data under `/users/{userId}` is private to the owning user.
 * - Admin Role: An `admin` role in a user's profile grants broader permissions for managing global collections.
 * - Dual-Write for Orders: Orders are written to both the user's private subcollection and the global admin collection.
 *   This keeps user data isolated while providing admins a central place to manage operations.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    //-------------------------------------------------------------------------
    // Helper Functions
    //-------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isNewOwnedDocument(userId) {
      return isOwner(userId) && request.resource.data.userId == userId;
    }

    function isAdmin() {
      // Check for 'admin' role on the user's own profile document.
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    //-------------------------------------------------------------------------
    // User Data Collections
    //-------------------------------------------------------------------------
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow create: if isOwner(userId); // Allow user to create their own profile document
      allow update, delete: if isOwner(userId);
      allow list: if isAdmin(); // Only admins can list all users

      // Nested user-specific data
      match /addresses/{addressId} {
        allow read, write: if isOwner(userId);
      }

      match /notifications/{notificationId} {
        allow read, write: if isOwner(userId);
      }
      
      // Orders are nested under the user for privacy and ownership.
      match /orders/{orderId} {
        allow read, list: if isOwner(userId);
        // Users create orders via a batch write managed by the OrderContext.
        // Direct creation here is allowed as part of that batch.
        allow create: if isNewOwnedDocument(userId);
        // Only admins can update the user's copy of the order status.
        allow update: if isAdmin();
        allow delete: if isOwner(userId) || isAdmin();
      }
    }
    
    //-------------------------------------------------------------------------
    // Global & Admin-Facing Collections
    //-------------------------------------------------------------------------
    
    // Admin-only collection for managing all orders.
    match /orders/{orderId} {
        allow read, list, update, delete: if isAdmin();
        // Users create orders via a batch write that also writes here.
        allow create: if isNewOwnedDocument(request.auth.uid);
    }

    // Publicly readable, admin-writable services.
    match /services/{serviceId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    // Publicly readable, admin-writable service rates.
    match /service_rates/{rateId} {
        allow get, list: if true;
        allow create, update, delete: if isAdmin();
    }
  }
}
