/**
 * Core Philosophy: This ruleset enforces a strict user-ownership model for all user-specific data.
 *
 * Data Structure:
 * - /users/{userId}: A collection storing individual UserProfile documents. Access is restricted to the owner or an admin.
 *   - /addresses/{addressId}: Subcollection for a user's addresses. Owner-only access.
 *   - /notifications/{notificationId}: Subcollection for a user's notifications. Owner-only access.
 *   - /orders/{orderId}: Subcollection for a user's laundry orders. Owner-only access.
 * - /allOrders/{orderId}: A collection containing a copy of all orders. Admin-only access.
 * - /services/{serviceId} & /service_rates: Publicly readable collections for application configuration.
 *
 * Key Security Decisions:
 * - User Data Privacy: All data under `/users/{userId}` and its subcollections is private to the owning user.
 * - Admin Role: An `admin` role in a user's profile grants broader permissions for managing global collections.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    //-------------------------------------------------------------------------
    // Helper Functions
    //-------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      // Check for 'admin' role on the user's own profile document.
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    //-------------------------------------------------------------------------
    // User Data Collections
    //-------------------------------------------------------------------------
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId); // Allow user to create their own profile document
      allow update, delete: if isOwner(userId);
      allow list: if isAdmin(); // Only admins can list all users

      // Nested user-specific data
      match /addresses/{addressId} {
        allow read, write: if isOwner(userId);
      }

      match /notifications/{notificationId} {
        allow read, write: if isOwner(userId);
      }
      
      // Orders are nested under the user, only the user can manage them.
      match /orders/{orderId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    //-------------------------------------------------------------------------
    // Global & Admin-Facing Collections
    //-------------------------------------------------------------------------

    // Admin-only collection for all orders.
    match /allOrders/{orderId} {
      allow read, list, write: if isAdmin();
    }

    // Publicly readable, admin-writable services.
    match /services/{serviceId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }

    // Publicly readable, admin-writable service rates.
    match /service_rates/{rateId} {
        allow get, list: if true;
        allow create, update, delete: if isAdmin();
    }
  }
}
